<div class="top">
  <img src="../assets/img/burger_anim.png" width="250px" />
  <h1>Who Wants Burgers?</h1>
</div>

<div class="container-fluid d-flex justify-content-center">
        <div class="row">
<div class="ready-burgers">
  <h4>Burgers that are ready to be eaten:</h4>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>


  <div class="devoured-burgers">
    <h4>Burgers that have been devoured:</h4>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
  <div style="clear: both;"></div>


</div>
</div>

<div class="burger-add">
  <h2>Add a Burger</h2>
  <form class="create-form">
</div>

<div class="form-group">
  <label for="ca">Burger Name:</label>
  <input type="text" id="ca" name="burger_name">
</div>

<div class="form-group">
  <label for="slee">Is the burger ready or not?</label><br>
  <input type="radio" name="Devoured" value="1" checked> Devoured!<br>
  <input type="radio" name="Devoured" value="0"> Ready
</div>

<div class="button">
  <button class="button" type="submit">Add Burger</button>

</div>


</form>